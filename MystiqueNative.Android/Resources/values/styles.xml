<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="MasterDetailTheme" parent="MasterDetailTheme.Base">
	</style>
	<style name="MasterDetailTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="colorControlNormal">@color/accentLight</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:statusBarColor">@color/primary_dark</item>
    <item name="android:actionMenuTextColor">@color/primary_text</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
  </style>
	<style name="SplashTheme" parent="SplashTheme.Base">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/accent</item>
	</style>
	<style name="SplashTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowBackground">@drawable/splash_screen</item>
	</style>
	<style name="button_primary" parent="@android:style/Widget.Button">
		<item name="colorButtonNormal">@color/primary</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
	<style name="Widget.CardContent" parent="android:Widget">
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:paddingTop">24dp</item>
		<item name="android:paddingBottom">24dp</item>
		<item name="android:orientation">vertical</item>
	</style>
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  
  <style name="starRatingBar" parent="@android:style/Widget.RatingBar">
    <item name="android:progressDrawable">@drawable/rating_stars</item>
    <item name="android:minHeight">22dip</item>
    <item name="android:maxHeight">22dip</item>
  </style>
  
  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
  
  <style name="TextView.InputLabel" parent="TextAppearance.AppCompat.Caption">
    <item name="android:textColor">?android:textColorHint</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingLeft">4dp</item>
    <item name="android:paddingRight">4dp</item>
  </style>
  <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/accent</item>
  </style>
  <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
  </style>

  <!-- Buttons -->
  <style name="button_primary_HP"
         parent="@android:style/Widget.Button">
    <item name="android:background">@color/red_background</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:paddingBottom">2dp</item>
    <item name="android:paddingLeft">@dimen/small_margin</item>
    <item name="android:paddingRight">@dimen/small_margin</item>
  </style>
  
  <style name="button_secondary"
         parent="@android:style/Widget.Button">
    <item name="android:background">@color/none</item>
    <item name="android:textColor">@color/accent</item>
    <item name="android:layout_margin">@dimen/tiny_margin</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:paddingBottom">2dp</item>
    <item name="android:paddingLeft">@dimen/small_margin</item>
    <item name="android:paddingRight">@dimen/small_margin</item>
  </style>

  <!-- Text -->
  <style name="text_header_1"
         parent="@android:style/Widget.TextView">
    <item name="android:textSize">@dimen/bf_font</item>
    <item name="android:textColor">@color/primary_text</item>
  </style>
  <style name="text_header_2"
         parent="@android:style/Widget.TextView">
    <item name="android:textSize">@dimen/big_font</item>
    <item name="android:textColor">@color/primary_text</item>
  </style>
  <style name="text_secondary"
         parent="@android:style/Widget.TextView">
    <item name="android:textSize">@dimen/default_font</item>
    <item name="android:textColor">@color/secondary_text</item>
  </style>
  <style name="text_body"
         parent="@android:style/Widget.TextView">
    <item name="android:textSize">@dimen/default_font</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:padding">@dimen/small_margin</item>
  </style>
  <style name="text_body_italic"
         parent="@android:style/Widget.TextView">
    <item name="android:textStyle">italic</item>
    <item name="android:textSize">@dimen/default_font</item>
    <item name="android:textColor">@color/primary_text</item>
  </style>

  <style name="CustomBottomSheetDialogTheme"
         parent="Theme.Design.Light.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
  </style>
  <style name="CustomBottomSheetStyle"
         parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@android:color/transparent</item>
  </style>
</resources>
