








@using MystiqueMC.Helpers
@using MystiqueMC.Helpers.Permissions
@{
    /**/

    string rol = Session.ObtenerRol();
    PermissionsDelegate permissionsDelegate = new PermissionsDelegate(Session.ObtenerPermisos());
}
@model MystiqueMC.DAL.CatAseguranzas

@{
    ViewBag.Title = "Edit";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Editar Aseguranza</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    @using (Html.BeginForm("Edit", "CatAseguranzas", FormMethod.Post, new { id = "form-edit", data_parsley_validate = "true" }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="comercioId" id="comercioId" value="@ViewBag.comercioId" />
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.idCatAseguranzas)

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <div class="col-md-4">
                                        @Html.LabelFor(model => model.descripcion, "Descripción", htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new
                                   { @class = "form-control",
                                       data_parsley_maxlength = "100",
                                       autocomplete = "off",
                                       data_parsley_required = "true",
                                       data_inputmask_regex = "[a-zA-ZñÑáéíóúÁÉÍÓÚ0-9. ]{0,100}",
                                       data_parsley_errors_container = "#descripcion-error"
                                   } })
                                        <div class="row">
                                            <span style="color:red" for="descripcion" id="descripcion-error"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        @Html.LabelFor(model => model.descripcionIngles, "Descripción en ingles", htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.descripcionIngles, new { htmlAttributes = new
                                   { @class = "form-control",
                                       autocomplete = "off",
                                       data_parsley_maxlength = "100",
                                       data_parsley_required = "true",
                                       data_inputmask_regex = "[a-zA-ZñÑáéíóúÁÉÍÓÚ0-9. ]{0,100}",
                                       data_parsley_errors_container = "#descripcionIngles-error"
                                   } })
                                        <div class="row">
                                            <span style="color:red" for="descripcionIngles" id="descripcionIngles-error"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12"><br /></div>
                                    <!--IMAGEN-->
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-lg-5">
                                                <label>Logotipo</label>
                                                <img id="image" src="@ViewData["HOSTNAME_IMAGENES"]@Model.imagenAseguranza">
                                                <input type="hidden" id="image-upload-url" value="@Url.Action("UploadProductoImage", "Productos", null)" />
                                                <input type="hidden" id="ImageUrl" name="imagenAseguranza" value="@Model.imagenAseguranza"/>
                                            </div>
                                            <div class="col-lg-6 col-lg-offset-1">
                                                <div class="form-group " sty>
                                                    <label>Vista Previa</label>
                                                    <div class="img-preview " style="height:200px;width:267px;"></div>
                                                    <label class="btn btn-success m-md" for="inputImage">
                                                        Cambiar imagen
                                                    </label>
                                                    <input type="file" accept="image/*" id="inputImage" class="hide">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <input id="btn-guardar" type="button" value="Guardar" class="btn btn-primary" />
                                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/plugins/parsley/parsley.min.js"></script>
    <script src="~/Scripts/plugins/parsley/parsley.es.js"></script>
    <script src="~/Scripts/plugins/parsley/validators/comparison.js"></script>
    <script src="~/Scripts/plugins/cropper/cropper.min.js"></script>
    <script src="~/Scripts/plugins/cropper/cropper.jquery.min.js"></script>
    <script src="~/Scripts/app/catAseguranzas/Edit.js"></script>
}


@section Styles{
    <link href="~/Content/plugins/cropper/cropper.min.css" rel="stylesheet" type="text/css" />
}