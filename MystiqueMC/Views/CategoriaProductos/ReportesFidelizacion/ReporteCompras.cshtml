@using MystiqueMC.Helpers
@using MystiqueMC.Helpers.Permissions
@{
    string rol = Session.ObtenerRol();
    PermissionsDelegate permissionsDelegate = new PermissionsDelegate(Session.ObtenerPermisos());
}
@model IEnumerable<MystiqueMC.DAL.SP_Reporte_Registro_Compras_Result>
@{
    ViewBag.Title = "Reporte Compras";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Compras</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title" style="background-color:transparent;border-width:0px; margin-top:-15px">

                    <div class="row">
                        @using (Html.BeginForm())
                        {
                            <div class="form-group col-md-3" style="margin-left:-20pt">
                                <div class="input-group">
                                    <span class="input-group-addon" style="color: #6C6A67; background-color:transparent; border-color:transparent;"><b>Sucursal:</b></span>

                                    @Html.DropDownList("Sucursales", ViewBag.ComprasSelect as SelectList, "TODAS", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-5" style="margin-left:-20pt">

                                <div class="input-group input-daterange">
                                    @*FECHA INICIO*@
                                    <span class="input-group-addon" style="color: #6C6A67; background-color:transparent; border-color:transparent;"><b>Fecha:</b></span>
                                    <input autocomplete="off" type="text" class="form-control input-sm" id="fecha1" name="fecha1" value="@ViewBag.fechaInicio">
                                    <span class="input-group-addon">
                                        <span class="fa fa-calendar"></span>
                                    </span>
                                    @*FECHA FIN*@
                                    <span class="input-group-addon" style="color:#6C6A67; background-color:transparent; border-color:transparent;"><b>A</b></span>
                                    <input autocomplete="off" type="text" class="form-control input-sm" id="fecha2" name="fecha2" value="@ViewBag.fechaFin">
                                    <span class="input-group-addon">
                                        <span class="fa fa-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <span class="input-group-btn">
                                    <button style="width:100%" class="btn btn-primary btn-sm" type="submit">Buscar</button>
                                </span>
                            </div>}
                        <div class="col-md-1 pull-right">
                            <button id="ButtonExcel" style="width:100%" class="btn btn-primary" onclick="$('#realExcel').click()">
                                Excel &nbsp;

                                <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="ibox-content">
                    <div class="table-responsive">
                        <table id="ContentTable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Sucursal
                                    </th>

                                    <th width="22%pt">
                                        Nombre
                                    </th>
                                    <th>
                                        Fecha Registro
                                    </th>
                                    <th>
                                        Fecha Compra
                                    </th>
                                    <th>
                                        Folio Compra
                                    </th>
                                    <th class="text-right">
                                        Monto Compra
                                    </th>
                                    <th class="text-right">
                                        Puntos
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sucursal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.ValueFor(modelItem => item.FechaRegistro, "{0:dd/MM/yyyy HH:mm tt}")
                                        </td>
                                        <td>
                                            @Html.ValueFor(modelItem => item.FechaCompra, "{0:dd/MM/yyyy HH:mm tt}")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FolioCompra)
                                        </td>
                                        <td class="text-right">
                                            @item.MontoCompra.ToString("N")
                                            @*@Html.DisplayFor(modelItem => item.MontoCompra.ToString("N2"))*@
                                        </td>
                                        <td class="text-right">
                                            @item.Puntos.ToString("G29") pts
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-10" style="padding:0pt">
                        <a href="@Url.Action("Fidelizacion","Home", new { tabID="reportes_button"})" class="btn btn-white m-r-sm">Regresar</a>
                        @*@Html.ActionLink("Regresar", "Index", "ReportesFidelizacion", null, new { @class = "btn btn-white" })*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

