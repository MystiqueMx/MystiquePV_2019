            })
        });
        jQuery(document).ready(function ($) {
            $('#fecha2').datepicker({
                language: 'es',
                Format: "mm/dd/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            })
        });

        function getDate(element) {
