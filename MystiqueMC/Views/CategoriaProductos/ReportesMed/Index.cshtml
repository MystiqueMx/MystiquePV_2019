@using MystiqueMC.Helpers
@using MystiqueMC.Helpers.Permissions
@{
    string rol = Session.ObtenerRol();
    PermissionsDelegate permissionsDelegate = new PermissionsDelegate(Session.ObtenerPermisos());
}

@if (permissionsDelegate.HasPermissionForController(rol, "ReportesMed"))
{
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-6">
            <h2>Reportes</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3" style="margin-bottom:10pt">
            <div class="row">
                <div class="col-md-2 col-xs-3" style="float:left">
                    <img src="~/Content/img/Catalog.png" style="margin-top:13px;float:left" />
                </div>
                <div class="col-md-10 col-xs-9">
                    <a href="@Url.Action("ReporteCitas", "ReportesMed")" class="btn btn-catalogos" style="text-align:initial;margin-left:-13px;font-size:16px;margin-bottom:-5px">Citas</a>
                    <div>
                        Presenta el detalle de las citas.
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3" style="margin-bottom:10pt">
            <div class="row">
                <div class="col-md-2 col-xs-3" style="float:left">
                    <img src="~/Content/img/Catalog.png" style="margin-top:13px;float:left" />
                </div>
                <div class="col-md-10 col-xs-9">
                    <a href="@Url.Action("ReporteBeneficios", "ReportesMed")" class="btn btn-catalogos" style="text-align:initial;margin-left:-13px;font-size:16px;margin-bottom:-5px">Beneficios</a>
                    <div>
                        Presenta el detalle de los Beneficios.
                    </div>
                </div>
            </div>
        </div>
    </div>


}
@section Styles{
    <style>
        .btn-catalogos {
            color: black;
            font-size: small;
            font-weight: bold;
        }

            .btn-catalogos:hover {
                color: #20B193;
                font-size: small;
                font-weight: bold;
            }
    </style>
}
