<!--- MODAL ACTIVAR RECOMPENSA -->

<div class="modal fade" id="modal-eliminara-canje" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"><i class="fa fa-exclamation-triangle" aria-hidden="true" style="color:red; background-color:white"></i></h4>
            </div>
            <div class="modal-body">
                <h3 id="confirm-title">¿Esta seguro que desea activar la siguiente recompensa? </h3>
                <label>&nbsp;<strong id="confirm-item"></strong></label>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "Productos", FormMethod.Post, new { data_parsley_validate = "true", autocomplete = "off" }))
                {
                    <input type="hidden" id="IdItemEliminar_canje" name="IdRecompensa" />
                    <input type="hidden" id="ViewBag-porcentaje" name="ViewBagPorcentaje" />
                    <input type="hidden" id="ViewBag-cantidadPuntos" name="ViewBagCantidadPuntos" />
                    <input type="hidden" id="ViewBag-equivalentePuntoPorDinero" name="ViewBagEquivalentePuntoPorDinero" />
                    <input type="reset" value="Cancelar" class="btn btn-defaut" data-dismiss="modal" id="form-recompensa-reset_activar">
                    <input id="modal_activar_canje_button" data-backdrop="false" data-request-url="@Url.Action("Delete", "Productos")" type="button" value="Activo" class="btn btn-primary">
                }
            </div>
        </div>
    </div>
</div>

<script>
    $("#modal_activar_canje_button").on("click", function () {
        $("#modal-eliminara_canje").modal('hide');

        $.ajax({
            type: "POST",
            url: $(this).data('request-url'),
            data: {
                IdRecompensa: $("#IdItemEliminar_canje").val(),
                ViewBagPorcentaje: $("#ViewBag-porcentaje").val(),
                ViewBagCantidadPuntos: $("#ViewBag-cantidadPuntos").val(),
                ViewBagEquivalentePuntoPorDinero: $("#ViewBag-equivalentePuntoPorDinero").val()
            },
            success: function (result) {

                $("#modal-eliminara_canje").modal('hide');

                $('body').removeClass('modal-open');
                $('.modal-backdrop').remove();

                $("#form-recompensa-reset_activar").click();
                $("#canjes_button").click();
            }
        });
    });
</script>