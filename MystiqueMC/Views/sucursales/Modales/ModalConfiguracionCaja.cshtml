<div class="modal fade" id="modal-configuracion-caja" tabindex="-1" role="dialog">
    <div class=" modal-dialog modal-lg" role="document">
        <form action="@Url.Action("ConfiguracionCaja")" method="post" id="form-configuracion-caja" class="form-horizontal" data-parsley-validate>
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Configuración Caja / Sucursal <span id="nombre"></span></h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input type="hidden" name="sucursalId" id="sucursalId"/>
                                    <div class="col-lg-4">
                                        <label class="control-label">Maximo de efectivo</label>
                                        <input class="form-control text-right" type="text" name="MaximoEfectivo" id="MaximoEfectivo" data-parsley-maxlength="10"
                                               data-inputmask-regex="[0-9.]{0,10}" data-parsley-errors-container="#error-MaximoEfectivo" data-parsley-required/>
                                        <span class="text-danger" id="error-MaximoEfectivo"></span>
                                    </div>
                                
                                    <div class="col-lg-4">
                                        <label class="control-label">Costo Envio</label>
                                        <input class="form-control text-right" type="text" name="CostoEnvio" id="CostoEnvio" data-parsley-maxlength="10"
                                               data-inputmask-regex="[0-9.]{0,10}" data-parsley-errors-container="#error-CostoEnvio" data-parsley-required />
                                        <span class="text-danger" id="error-CostoEnvio"></span>
                                    </div>
                                   
                                    <div class="col-lg-4">
                                        <label class="control-label">Iva</label>
                                        <div class="input-group">
                                            <input class="form-control text-right" type="text" name="Iva" id="Iva" data-parsley-maxlength="10"
                                                   data-inputmask-regex="[0-9.]{0,10}" data-parsley-errors-container="#error-Iva" data-parsley-required />
                                        <div class="input-group-addon">%</div>
                                        </div>
                                            <span class="text-danger" id="error-Iva"></span>
                                    </div>
                                   
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <div class="col-lg-6">
                                        <label class="control-label">Mensaje del Ticket</label>
                                        <input class="form-control" type="text" name="MensajeTicket" id="MensajeTicket" data-parsley-maxlength="300"
                                               data-inputmask-regex="[a-zA-ZñÑáéíóúÁÉÍÓÚ,!.0-9// ]{0,300}" data-parsley-errors-container="#error-MensajeTicket" data-parsley-required/>
                                        <span class="text-danger" id="error-MensajeTicket"></span>
                                    </div>
                                    
                                    <div class="col-lg-6">
                                        <div class="row">
                                            <label class="control-label text-center" style="margin-left:80px">Logotipo en Ticket</label>
                                            <div class="col-lg-10">
                                                <input id="Imagen" name="Imagen" type="hidden" />
                                                   <img id="images" height="200" src="~/Content/img/default_food.png" alt="">
                                            </div>
                                            <div class="col-lg-10 col-lg-offset-2">
                                                <label class="btn btn-primary m-t-md" for="inputImages">
                                                    Cambiar imagen
                                                </label>
                                                <input type="file" accept="image/*" id="inputImages" class="hide">
                                                <span id="mensaje"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btn-guardar-modal" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button id="btn-guardar" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>
