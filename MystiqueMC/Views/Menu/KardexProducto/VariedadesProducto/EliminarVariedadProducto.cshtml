<div class="modal fade" id="modal-eliminar" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <form action="@Url.Action("EliminarVariedad")" method="post" id="form-eliminar" class="form-horizontal one-click-form" data-parsley-validate>
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Eliminar Variedad</h4>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @*<input type="hidden" name="idProducto" id="idProducto" />*@
                        <input type="hidden" name="idVariedadEliminar" id="idVariedadEliminar" />
                        <h3 style="text-align:center">¿Esta seguro que desea eliminar la siguiente variedad?</h3>
                        <h3 style="text-align:center">&nbsp;<strong id="producto"></strong></h3>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btn-guardar-modal" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="submit" id="guardar-estatus" class="btn btn-danger">Eliminar</button>
                </div>
            </div>
        </form>
    </div>
</div>