<div class="modal fade" id="modal-cerrar-arqueo" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 id="titulo-modal" class="modal-title"></h3>
                <label id="concepto-modal"></label>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12" style="margin-left:-20pt">
                        <form method="post" action="@Url.Action("ActualizarArqueo")" data-parsley-validate autocomplete="off" class="form-horizontal" id="form-actualizar">
                            <div class="row">
                                <label class="col-md-3 control-label">Total recibido</label>
                                <div class="col-md-9">
                                    <input type="hidden" name="id" id="id"/>
                                    <input autocomplete="off" id="totalRecibido" type="text" class="form-control text-right" data-parsley-required data-inputmask-regex="[0-9,]{0,12}([\.][0-9]{0,2})?" rows="1" value="0" name="totalRecibido" />
                                </div>
                            </div><br />
                            <div class="row">
                                <label class="col-md-3 control-label">Observación</label>
                                <div class="col-md-9">
                                    <textarea id="observacion" type="text" class="form-control text-right" data-parsley-required data-inputmask-regex="[a-zA-ZñÑáéíóúÁÉÍÓÚ. ]{0,300}" rows="4" name="Observacion" style="text-align:justify"></textarea>
                                </div>
                            </div><br />
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" id="btn-guardar-modal" onclick="$('#form-actualizar').submit();" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>

