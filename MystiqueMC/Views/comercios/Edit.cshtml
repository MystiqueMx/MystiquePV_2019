@using MystiqueMC.Helpers
@using MystiqueMC.Helpers.Permissions
@{
    /**/

    string rol = Session.ObtenerRol();
    string HOSTNAME_IMAGENES = ViewBag.HOSTNAME_IMAGENES;
    PermissionsDelegate permissionsDelegate = new PermissionsDelegate(Session.ObtenerPermisos());
}
@model MystiqueMC.DAL.comercios

@{
    ViewBag.Title = "Edit";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <h2>Editar Comercio @Model.nombreComercial</h2>
    </div>
</div>

<div class="row">
    @using (Html.BeginForm("Edit", "comercios", FormMethod.Post, new { id = "formaComercio", data_parsley_validate = "true", autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idComercio)
        @Html.HiddenFor(model => model.empresaId)
      
        <input type="hidden" id="IndexEmpresa" name="IndexEmpresa" value="1" />
        <div class="col-lg-12">
            <div class="col-lg-12">
                <label class="control-label center">Datos Generales</label>
                <br />
                <div class=" col-md-5">
                    <label class="control-label">Nombre Comercio</label>
                    @Html.EditorFor(model => model.nombreComercial, new { htmlAttributes = new { @class = "form-control", @data_inputmask_regex = "[a-zA-ZñÑáéíóúÁÉÍÓÚ0-9 \\.'\\-\\,\\!]{0,100}", @data_inputmask_greedy = "false", @data_parsley_required = "", @data_parsley_maxlength = "100", @autocomplete = "off" } })
                </div>
                <div class="col-md-5">
                    <label class="control-label">Dirección</label>
                    @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control", @data_inputmask_regex = "[a-zA-ZñÑáéíóúÁÉÍÓÚ0-9 \\.'\\-]{0,100}", @data_inputmask_greedy = "false", @data_parsley_required = "", @data_parsley_maxlength = "100", @autocomplete = "off" } })
                </div>

                <div class=" col-md-2">
                    <label class="control-label">Teléfono</label>
                    @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control", @mask = "(999) 999-99-99", @autocomplete = "off" } })
                </div>

            </div>
            <div class="col-lg-12">
                <div class="col-md-3">
                    <label class="control-label">Correo</label>
                    @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", @data_inputmask_regex = "[a-zA-ZñÑ@0-9 .-_--]{0,100}", @data_inputmask_greedy = "false", @data_parsley_maxlength = "100", @data_parsley_type = "email", @autocomplete = "off" } })
                </div>
                <div class="col-md-3">
                    <label class="control-label">Página Web</label>
                    @Html.EditorFor(model => model.paginaWeb, new { htmlAttributes = new { @class = "form-control", @data_inputmask_regex = "[a-zA-ZñÑáéíóúÁÉÍÓÚ0-9 \\.'\\-\\:\\//]{0,100}", @data_inputmask_greedy = "false", @data_parsley_maxlength = "100", @data_parsley_type = "url", @autocomplete = "off" } })
                </div>
                <div class="col-md-2">
                    <label class="control-label">Giro Comercio</label>
                    @Html.DropDownList("catComercioGiroId", null, htmlAttributes: new { @class = "form-control", @data_parsley_required = "" })
                </div>
                <div class="col-md-2">
                    <label class="control-label">Tipo Comercio</label>
                    @Html.DropDownList("catTipoComercioId", null, htmlAttributes: new { @class = "form-control", @data_parsley_required = "" })
                </div>
                <div class="col-md-2">
                    <label class="control-label">Estatus</label>
                    @Html.DropDownList("estatus", null, htmlAttributes: new { @class = "form-control", @data_parsley_required = "" })
                </div>
            </div>
        </div>
        <div class="col-lg-12"><br /></div>
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-5">
                    <label>Logotipo</label>
                    <img id="image" height="300" src="@HOSTNAME_IMAGENES@Model.logoUrl">
                    <input type="hidden" id="image-upload-url" value="@Url.Action("UploadProductoImage", "Productos", null)" />
                    <input type="hidden" id="ImageUrl" name="logoUrl" value="@Model.logoUrl" />
                </div>
                <div class="col-lg-6 col-lg-offset-1">
                    <div class="form-group m-l-lg">
                        <label>Vista Previa</label>
                        <div class="img-preview " style="height:200px;width:267px;"></div>
                        <label class="btn btn-success m-md" for="inputImage">
                            Cambiar imagen
                        </label>
                        <input type="file" accept="image/*" id="inputImage" class="hide">
                    </div>
                </div>
            </div>
        </div>

    }
</div>
<br />
<div class="row">
    <div class="col-lg-3 ">
        <button type="button" class="btn btn-primary" id="btn-guardar">Guardar</button>
        @if (rol == "Empresa")
        {
            <a href="@Url.Action("IndexEmpresa", "comercios", new { idEmpresa = Model.empresaId})" class="btn btn-white m-r-sm">Regresar</a>
        }
        else
        {
            <a href="@Url.Action("Index","Home")" class="btn btn-white m-r-sm">Regresar</a>
        }


        <div id="spinner" class="spiner-example" style="display:none;">
            <div class="sk-spinner sk-spinner-circle">
                <div class="sk-circle1 sk-circle"></div>
                <div class="sk-circle2 sk-circle"></div>
                <div class="sk-circle3 sk-circle"></div>
                <div class="sk-circle4 sk-circle"></div>
                <div class="sk-circle5 sk-circle"></div>
                <div class="sk-circle6 sk-circle"></div>
                <div class="sk-circle7 sk-circle"></div>
                <div class="sk-circle8 sk-circle"></div>
                <div class="sk-circle9 sk-circle"></div>
                <div class="sk-circle10 sk-circle"></div>
                <div class="sk-circle11 sk-circle"></div>
                <div class="sk-circle12 sk-circle"></div>
            </div>
        </div>
        <br />
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/inputmask.min.js"></script>
    <script src="~/Scripts/app/mask/inputmask.js"></script>
    <script src="~/Scripts/plugins/parsley/parsley.min.js"></script>
    <script src="~/Scripts/plugins/parsley/parsley.es.js"></script>
    <script src="~/Scripts/plugins/parsley/validators/comparison.js"></script>
    <script src="~/Scripts/plugins/cropper/cropper.min.js"></script>
    <script src="~/Scripts/plugins/cropper/cropper.jquery.min.js"></script>
    <script src="~/Scripts/plugins/bootstrap-duallistbox/jquery.bootstrap-duallistbox.min.js"></script>
    <script src="~/Scripts/app/Comercios/Edit.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#telefono").inputmask("mask", { "mask": "(999) 999-99-99" });
        });
    </script>
}
@section Styles{
    <link href="~/Content/plugins/bootstrap-duallistbox/bootstrap-duallistbox.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/plugins/cropper/cropper.min.css" rel="stylesheet" type="text/css" />
}
